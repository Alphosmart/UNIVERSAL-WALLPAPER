# Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:8080

# Stripe Configuration (for payments)
# Leave empty to disable Stripe payments and avoid loading errors
REACT_APP_STRIPE_PUBLISHABLE_KEY=

# Google Analytics (replace with your actual GA4 Measurement ID)
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Analytics Configuration
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ANALYTICS_DEBUG=false

# Feature Flags
REACT_APP_ENABLE_SOCIAL_FEATURES=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_SHIPPING_QUOTES=true

# Development Configuration
GENERATE_SOURCEMAP=true
REACT_APP_DEBUG=true

# Build Configuration
BUILD_PATH=build
PUBLIC_URL=/
